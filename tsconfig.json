{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": false,
      // "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "baseUrl": "src",
      
      "paths": {
        "@nav" :["./navigation/index"],
        "@nav/*" :["./navigation/*"],
        "@theme/*" :["./theme/*"],
        "@theme" :["./theme/index"],
        "@components" :["./components/index"],
        "@components/*" :["./components/*"],
        "@containers" :["./containers/index"],
        "@service/*":["./services/*"], 
        "@service":["./services/index"], 
        "@utils/*":["./utils/*"], 
        "@utils":["./utils/index"], 
        "@deco":["./decorators/index"],
      }
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }